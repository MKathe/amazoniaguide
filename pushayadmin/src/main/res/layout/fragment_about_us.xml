<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:id="@+id/ly_image_profile"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/photo_profile"
                        android:layout_width="170dp"
                        android:layout_height="170dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_logo_pushay" />
                </RelativeLayout>
            </LinearLayout>


            <View
                android:id="@+id/view"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_below="@+id/ly_image_profile"
                android:background="@color/dark_gray"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>


            <LinearLayout
                android:id="@+id/ly_personal_edit"
                android:layout_width="match_parent"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:orientation="horizontal">

                <TextView
                    fontPath="fonts/Gotham-Medium.otf"
                    android:id="@+id/tv_personal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:text="ContÃ¡ctanos"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ly_cel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_personal_edit"
                android:orientation="horizontal"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/im_cel"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_phone"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_cel_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="992406360"
                    android:focusable="false"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/gray_regular"
                    android:textSize="@dimen/normal_text"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ly_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_cel"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/im_email"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_email"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_email_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="katherine.caillahua@gmail.com"
                    android:focusable="false"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/gray_regular"
                    android:textSize="@dimen/normal_text" />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/ly_personal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ly_email"
                android:orientation="horizontal"
                android:focusableInTouchMode="true">

                <ImageView
                    android:id="@+id/im_wsp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/whatsapp_logo"
                    android:tint="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tv_name_detail"
                    android:layout_width="match_parent"
                    android:backgroundTint="@color/gray_regular"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:text="Pushay "
                    android:layout_marginRight="10dp"
                    android:focusable="false"
                    android:textColorHint="@color/gray_regular"
                    android:textColor="@color/gray_regular"
                    android:textSize="@dimen/normal_text" />
            </LinearLayout>

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>