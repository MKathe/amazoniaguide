<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:focusableInTouchMode="true"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRA TU HORARIO"
                fontPath = "fonts/Gotham-Medium.otf"
                android:gravity="center"
                android:textSize="@dimen/xxlarge_text"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="Destino"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_text" />

            <TextView
                android:id="@+id/tv_destiny"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_text"
                android:text="Arequipa - Monasterio Santa Catalina" />

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Día"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_text" />

            <TextView
                android:id="@+id/tv_day_selected"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/large_text"
                android:text="@string/selected_date" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Cantidad máxima de personas"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_text" />

            <EditText
                android:id="@+id/tv_quantity"
                android:layout_width="50dp"
                android:inputType="number"
                android:textSize="@dimen/normal_text"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Lugar de encuentro"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_text" />

            <EditText
                android:id="@+id/tv_locality"
                android:layout_width="wrap_content"
                android:textSize="@dimen/normal_text"
                android:inputType="textCapWords"
                android:layout_height="wrap_content"
                android:hint="Plaza de armas" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Hora de encuentro"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_text" />

            <EditText
                android:id="@+id/et_hour"
                android:focusable="false"
                android:textSize="@dimen/normal_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="9:00 am" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Precio por persona"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/large_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="s/."
                    android:textSize="@dimen/xlarge_text" />
                <EditText
                    android:id="@+id/tv_price"
                    android:layout_width="80dp"
                    android:textSize="@dimen/normal_text"
                    android:inputType="number"
                    android:hint="20.00"
                    android:textColor="@color/gray"
                    android:layout_height="wrap_content"
                    android:gravity="center" />
            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="@drawable/button_secondary"
                android:layout_marginTop="18dp"
                android:id="@+id/btn_get_in"
                android:textColor="@color/white"
                android:text="REGISTRAR"/>

        </LinearLayout>

    </ScrollView>



</LinearLayout>